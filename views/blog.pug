//- Start of the Navbar
nav.navbar.navbar-expand-lg.navbar-dark.bg-dark.justify-content-left
  div.container-fluid
    a.navbar-brand(href='/') Dog Blog
    button.navbar-toggler(type='button', data-bs-toggle='collapse', data-bs-target='#navbarNavDropdown', aria-controls='navbarNavDropdown', aria-expanded='false', aria-label='Toggle navigation')
        span.navbar-toggler-icon
    div#navbarNavDropdown.collapse.navbar-collapse
        ul.navbar-nav
          li.nav-item
            a.nav-link(href='/') Home
          li.nav-item
            a.nav-link(href='/blog') Blog
          li.nav-item
            a.nav-link(href='/members') Members
          li.nav-item.hide#navLogout
            a.nav-link(href='/logout') Logout
          li.nav-item.hide#navLogin
            a.nav-link(href='/signin') Login
//- End Nav
//- Start of Content Container
#page-content
  .p-5.container.top-buffer.mh-100.justify-content-center.align-items-center
    div.row.justify-content-center.align-items-center
        div(class="col-md-12 col-md-offset-3")
          .form-group
            label(for='title') Dog Post
            input(placeholder="Post Title"
              type="text"
              class="form-control"
              id="title")
            label(for="body") Body:
            textarea(cols="30", rows="10", class="form-control", placeholder="Post Body", id="body")
            .form-group
              label(for="catgory") Username
              //- select(class="custom-select", id="author")
              input(placeholder="Username"
              type="text"
              class="form-control"
              id="username")
              label(for="catgory") Category
              //- select(class="custom-select", id="author")
              input(placeholder="Category"
              type="text"
              class="form-control"
              id="category")
            button.btn.btn-primary.submit(type="submit" id="postButton") Woof
            br
            br
            div(style="display: none" id="alert" class="alert alert-danger" role="alert")
              span(class="glyphicon glyphicon-exclamation-sign" aria-hidden="true")
              span() Error:
                  span(class="msg")
            div(style="display: none" id="alertDone" class="alert alert-success" role="alert")
              span(class="glyphicon glyphicon-exclamation-sign" aria-hidden="true")
              span() Success, your post was recorded!
//- Start of Footer
footer.navbarfixed-bottom.py-4.bg-dark.text-white
