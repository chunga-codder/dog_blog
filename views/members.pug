doctype html
head(lang='en')
  meta(charset='UTF-8')
  meta(name='viewport', content='width=device-width, initial-scale=1.0')
  title Accounts Page
  link(rel='stylesheet', href='https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css', integrity='sha384-JcKb8q3iqJ61gNV9KGb8thSsNjpSL0n8PARn9HuZOnIxN0hoP+VmmDGMN5t9UJ0Z', crossorigin='anonymous')
  link(rel='stylesheet', href='stylesheets/style.css', type='text/css')
  link(rel='stylesheet', href='https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.1/css/all.min.css', integrity='sha512-+4zCK9k+qNFUR5X+cKL9EIR+ZOhtIloNl9GIKS57V1MyNsYpYcUrUeQc9vNfzsWfV28IaLL3i96P9sdNyeRssA==', crossorigin='anonymous')
//- Start of the Navbar
nav.navbar.navbar-expand-lg.navbar-dark.bg-dark.justify-content-left
  div.container-fluid
    a.navbar-brand(href='/') Dog Blog
    button.navbar-toggler(type='button', data-bs-toggle='collapse', data-bs-target='#navbarNavDropdown', aria-controls='navbarNavDropdown', aria-expanded='false', aria-label='Toggle navigation')
        span.navbar-toggler-icon
    div#navbarNavDropdown.collapse.navbar-collapse
        ul.navbar-nav
          li.nav-item
            a.nav-link(href='/') Home
          li.nav-item
            a.nav-link(href='/blog') Blog
          li.nav-item
            a.nav-link(href='/members') Members
          li.nav-item.hide#navLogout
            a.nav-link(href='/logout') Logout
          li.nav-item.hide#navLogin
            a.nav-link(href='/signin') Login
//- End Nav
//- Start of Content Container
#page-content
  .p-5.container.top-buffer.mh-100.justify-content-center.align-items-center
    div.row.justify-content-center.align-items-center
        div(class="col-md-6 col-md-offset-3")
          h4.text-center Welcome 
            span#member-name
    .row
      .col-md-4.col-md-offset-3
        .card.mt-2
          .card-body#userPostTitles
            h4.border-bottom.border-dark.text-center Your Posts
      .col-md-8.col-md-offset-3
        aside.card.mt-2
          div.card-body#postCard
            h4.border-bottom.border-dark.text-center#title Title
            ul.list-group.list-group-flush.text-left#memberPost
                li.list-group-item 
                  h6 Creation Date: 
                  p#createDate  
                li.list-group-item 
                  h6 Most Recent Update: 
                  p#update  
                li.list-group-item
                  h6 Category: 
                  p#category
                li.list-group-item
                  h6 Body: 
                  p#body
//- Start of Footer
footer.navbarfixed-bottom.py-4.bg-dark.text-white
  .container.text-center
    small Copyright &copy; 2020
//- End of Footer
